{
    "name": "Balance Tracker",
    "version": "1.0.0",
    "description": "Close unused tabs easily",
    "permissions": ["tabs", "bookmarks","storage"],
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content_scripts.js"]
        }
    ]
}

